{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox against localhost",
            "url": "http://127.0.0.1:5503/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            // "version": "0.2.0",
            "type": "pwa-msedge",
            // "type": "msedge",
            "request": "launch",
            // "runtimeArgs": [
            //     "--remote-debugging-port=5503"
            // ],
            "name": "Launch Edge against localhost 5503",
            // "url": "http://localhost/arminia/index.html",
            "url": "http://127.0.0.1:5503/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "pwa-msedge",
            "request": "launch",
            "name": "Launch Edge against localhost 5502",
            // "url": "http://localhost/arminia/index.html",
            "url": "http://127.0.0.1:5502/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Microsoft Edge and open the Edge DevTools",
            "request": "launch",
            "type": "vscode-edge-devtools.debug",
            // "url": "http://localhost/arminia/index.html"
            "url": "http://127.0.0.1:5503/index.html"
        },
        {
            "type": "msedge",
            "request": "attach",
            "name": "Attach to Edge",
            "port": 5503,

            "runtimeArgs": [
                "--remote-debugging-port=5503"
            ],
            
            "url": "http://127.0.0.1:5503",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch browser",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "https://www.google.com",
            "webRoot": "${workspaceFolder}"
        }
    ]
}